{
  "name": "logisticspricer-frontend",
  "version": "1.0.0",
  "description": "Frontend application for LogisticsPricer - Modern React interface for freight transport cost calculation",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
