  "description": "Backend API for LogisticsPricer - Freight transport cost calculation service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
